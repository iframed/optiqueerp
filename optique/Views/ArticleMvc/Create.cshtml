@model optique.Dtos.ArticleDTO

<div class="breadcrumb">
        <a href="@Url.Action("Index", "Acceuil")" class="breadcrumb-link">Accueil</a> &gt;
        <span class="breadcrumb-current">Arrivages</span> &gt;
        <span class="breadcrumb-current">Détail d'Arrivage</span>
    </div>

<div class="article-create-container">
    <h2 class="form-title">Créer un Nouveau Article</h2>

    <form asp-action="Create" method="post" class="modern-form">
        @Html.AntiForgeryToken()

        <!-- Description -->
        <div class="form-group">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control modern-input" value=""  />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Reference -->
        <div class="form-group">
            <label asp-for="Reference" class="form-label"></label>
            <input asp-for="Reference" class="form-control modern-input" value="" />
            <span asp-validation-for="Reference" class="text-danger"></span>
        </div>

        <!-- Couleur -->
        <div class="form-group">
            <label asp-for="Couleur" class="form-label"></label>
            <input asp-for="Couleur" class="form-control modern-input"  value=""  />
            <span asp-validation-for="Couleur" class="text-danger"></span>
        </div>

        <!-- Prix de Vente Inter -->
        <div class="form-group">
            <label asp-for="PrixDeVenteInter" class="form-label"></label>
            <input asp-for="PrixDeVenteInter" class="form-control modern-input" type="number" step="0.01"  />
            <span asp-validation-for="PrixDeVenteInter" class="text-danger"></span>
        </div>

        <!-- Prix de Vente Revendeur -->
        <div class="form-group">
            <label asp-for="PrixDeVenteRevendeur" class="form-label"></label>
            <input asp-for="PrixDeVenteRevendeur" class="form-control modern-input" type="number" step="0.01" />
            <span asp-validation-for="PrixDeVenteRevendeur" class="text-danger"></span>
        </div>

        <!-- Prix de Vente Client Final -->
        <div class="form-group">
            <label asp-for="PrixDeVenteClientFinal" class="form-label"></label>
            <input asp-for="PrixDeVenteClientFinal" class="form-control modern-input" type="number" step="0.01"  />
            <span asp-validation-for="PrixDeVenteClientFinal" class="text-danger"></span>
        </div>

        <!-- Marque -->
        <div class="form-group">
           <!-- <label asp-for="MarqueId" class="form-label"></label>-->
             <label for="MarqueId" class="form-label">Marque</label>
            <select asp-for="MarqueId" class="form-control modern-select" asp-items="ViewBag.MarqueList">
                <option value="">marque</option>
            </select>
            <span asp-validation-for="MarqueId" class="text-danger"></span>
        </div>

        <!-- Type -->
        <div class="form-group">
           <!-- <label asp-for="TypeId" class="form-label"></label>-->
            <label for="TypeId" class="form-label">Type</label>
            <select asp-for="TypeId" class="form-control modern-select" asp-items="ViewBag.TypeList">
                <option value="">type</option>
            </select>
            <span asp-validation-for="TypeId" class="text-danger"></span>
        </div>

        <!-- Fournisseur -->
        <div class="form-group">
           <!-- <label asp-for="FournisseurId" class="form-label"></label>-->
            <label for="FournisseurId" class="form-label">Fournisseur</label>
            <select asp-for="FournisseurId" class="form-control modern-select" asp-items="ViewBag.FournisseurList">
                <option value="">fournisseur</option>
            </select>
            <span asp-validation-for="FournisseurId" class="text-danger"></span>
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary modern-button">Créer</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<!-- Add the following CSS to give it a modern look -->
<style>
    .article-create-container {
        background-color: #f7f8fa;
        padding: 20px;
        border-radius: 10px;
        max-width: 600px;
        margin: 20px auto;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }

    .form-title {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
        font-family: 'Roboto', sans-serif;
    }

    .modern-form {
        display: flex;
        flex-direction: column;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 5px;
        display: block;
        color: #5a5a5a;
    }

    .modern-input, .modern-select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    .modern-input:focus, .modern-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.25);
    }

    .modern-button {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .modern-button:hover {
        background-color: #0056b3;
    }

    .text-danger {
        color: #dc3545;
    }
</style>