@model optique.ViewModels.LoginPageModel

@{
    ViewData["Title"] = "Login";
}



<div class="login-container">

    <img src="~/images/Capture d’écran 2024-09-24 à 10.34.22.png" alt="Logo" class="logo-right">
    <div class="login-form">
        
        <h2 class="text-center">Login</h2>
        
        
        
        <!-- Alerte pour les erreurs de connexion -->
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" id="loginErrorAlert" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Affiche l'alerte pendant 3 secondes, puis la masque
        document.addEventListener("DOMContentLoaded", function () {
            var alert = document.getElementById('loginErrorAlert');
            if (alert) {
                setTimeout(function () {
                    alert.classList.remove('show');
                }, 3000); // 3000ms = 3 seconds
            }
        });
    </script>
}

<style>
    body {
    background-color: #f0f2f5;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
}

.login-container {
    width: 100%;
    max-width: 400px;
    padding: 20px;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    height: 300px;
    position: relative;
}

.login-form {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.login-form h2 {
    margin-bottom: 20px;
    font-size: 24px;
    color: #333;
    text-align: center;
}

.form-group {
    margin-bottom: 15px;
    display: flex;
    flex-direction: column; /* Stack label on top of input */
}

.form-label {
    margin-bottom: 5px;
    font-weight: bold;
}

.form-control {
    height: 40px;
    font-size: 16px;
    border-radius: 5px;
    padding: 10px;
}

.btn-primary {
    background-color: #0771e2;
    border-color: #007bff;
    transition: background-color 0.3s ease;
    width: 250px;
    text-align: center;
    margin-top: 10px;
    margin-left: 20%;
    height: 35px;
}

.btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
    cursor: pointer;
    color: white;
}

.text-danger {
    font-size: 14px;
}

.logo-right {
    position: absolute;
    top: 10px; /* Ajustez la distance par rapport au haut du conteneur */
    right: 10px; /* Ajustez la distance par rapport à la droite du conteneur */
    height: 60px; /* Taille du logo */
    width: 60px;
    border-radius: 50%; /* Rend l'image circulaire */
    object-fit: cover; /* Garde l'image bien ajustée dans le cercle */
}
</style>
